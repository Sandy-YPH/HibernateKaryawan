<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="LaporanKaryawan" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">

    <!-- FIELD ENTITY KARYAWAN -->
    <field name="id" class="java.lang.Integer"/>
    <field name="nip" class="java.lang.String"/>
    <field name="nama" class="java.lang.String"/>
    <field name="jabatan" class="java.lang.String"/>
    <field name="gaji" class="java.lang.Double"/>

    <!-- JUDUL -->
    <title>
        <band height="70">
            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[LAPORAN DATA KARYAWAN]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="68" width="555" height="1"/>
                <graphicElement>
                    <pen lineWidth="2.0"/>
                </graphicElement>
            </line>
        </band>
    </title>

    <!-- HEADER KOLOM -->
    <columnHeader>
        <band height="25">

            <staticText>
                <reportElement x="0" y="0" width="50" height="25" mode="Opaque" backcolor="#CCCCCC"/>
                <textElement textAlignment="Center"><font isBold="true"/></textElement>
                <text><![CDATA[ID]]></text>
            </staticText>

            <staticText>
                <reportElement x="50" y="0" width="100" height="25" mode="Opaque" backcolor="#CCCCCC"/>
                <textElement textAlignment="Center"><font isBold="true"/></textElement>
                <text><![CDATA[NIP]]></text>
            </staticText>

            <staticText>
                <reportElement x="150" y="0" width="150" height="25" mode="Opaque" backcolor="#CCCCCC"/>
                <textElement textAlignment="Center"><font isBold="true"/></textElement>
                <text><![CDATA[NAMA]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="0" width="130" height="25" mode="Opaque" backcolor="#CCCCCC"/>
                <textElement textAlignment="Center"><font isBold="true"/></textElement>
                <text><![CDATA[JABATAN]]></text>
            </staticText>

            <staticText>
                <reportElement x="430" y="0" width="125" height="25" mode="Opaque" backcolor="#CCCCCC"/>
                <textElement textAlignment="Center"><font isBold="true"/></textElement>
                <text><![CDATA[GAJI]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ISI TABEL -->
    <detail>
        <band height="25">

            <textField>
                <reportElement x="0" y="0" width="50" height="25"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="50" y="0" width="100" height="25"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{nip}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="150" y="0" width="150" height="25"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{nama}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="300" y="0" width="130" height="25"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{jabatan}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="430" y="0" width="125" height="25"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                    "Rp " + new java.text.DecimalFormat("#,###", 
                    new java.text.DecimalFormatSymbols(java.util.Locale.GERMANY))
                    .format($F{gaji})
                ]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>
